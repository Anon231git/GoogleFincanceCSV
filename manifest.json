{
  "manifest_version": 3,
  "name": "Google Finance Portfolio CSV Importer",
  "version": "1.0",
  "description": "Upload CSV files to automatically add stocks to your Google Finance portfolio",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.google.com/finance/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.google.com/finance/portfolio/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "CSV Portfolio Importer"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}